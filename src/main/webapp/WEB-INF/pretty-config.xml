<pretty-config xmlns="http://ocpsoft.org/schema/rewrite-config-prettyfaces"
               xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:schemaLocation="http://ocpsoft.org/schema/rewrite-config-prettyfaces
                      http://ocpsoft.org/xml/ns/prettyfaces/rewrite-config-prettyfaces.xsd">

    <url-mapping id="index">
        <pattern value="/" />
        <view-id value="/index.xhtml" />
    </url-mapping>

    <url-mapping id="shop">
        <pattern value="/shop/"/>
        <view-id value="/shop.xhtml"/>
    </url-mapping>

    <url-mapping id="shop">
        <pattern value="/shop"/>
        <view-id value="/shop.xhtml"/>
    </url-mapping>
    
    <url-mapping id="dashboard">
        <pattern value="/dashboard/"/>
        <view-id value="/dashboard.xhtml"/>
    </url-mapping>

    <url-mapping id="dashboard">
        <pattern value="/dashboard"/>
        <view-id value="/dashboard.xhtml"/>
    </url-mapping>

    <url-mapping>
        <pattern value="/profile/"></pattern>
        <view-id value="/profile.xhtml"/>
    </url-mapping>

    <url-mapping id="profile">
        <pattern value="/profile"></pattern>
        <view-id value="/profile.xhtml"/>
    </url-mapping>

    <url-mapping id="login">
        <pattern value="/login"/>
        <view-id value="/login.xhtml"/>
    </url-mapping>

    <url-mapping id="login">
        <pattern value="/login/"/>
        <view-id value="/login.xhtml"/>
    </url-mapping>

</pretty-config>